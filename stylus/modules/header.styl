/* Header demo styles */
/* --------------------------------------- */

.global-header
	background-color		$backgroundColour
	font-size				0

	@include breakpoint(break-1)
		background-color	$headBackgroundColour

	&--logo
		background-image	url("../img/logo.png")
		background-size		cover
		color				transparent
		display				inline-block
		font				0/0 a
		height				60px
		margin-left			3%
		vertical-align		middle
		width				165px

		@include breakpoint(break-1)
			margin-left		0